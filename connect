# !/bin/bash -x
if [ "$1" = "?" ]
	then
		B1="\033[1m";
		B2="\033[0m";
		echo -e "${B1}More info${B2}";
		echo -e "https://github.com/hankpillow/ftp-tools";
		echo -e "";
		exit 1;
fi

function connect {

	local dirname=`dirname $0`
	. "$dirname/test-config"

	local cmd="ssh $user@$host $p"

	if [ -n "$bind" ]; then
		cmd="ssh -L $bind $user@$host $param_port"
	fi

	echo -e "\033[31mconnecting:\033[0m\n$cmd";
	eval "$cmd"
}

connect